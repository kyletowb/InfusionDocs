@using Orchard.ContentManagement
@model Infusion.Documents.ViewModels.SearchViewModel
<div class="left-float search-return-font">
<div class="left-float search-return-box bg-elevator-pitch">
<h3>Elevator Pitch</h3>
    <div class="search-return-content" contenteditable="true" onclick="document.execCommand('selectAll',false,null)">
        @if (Model.ElevatorPitches.Any()) {
            @Display(Model.ElevatorPitches.First())
        }
        else {
            @T("No elevator pitches")
        }
    </div>
</div>
