<div class="right-float width-240">
<div class="article-list-area">
<div class="article-title"><a>Relevant Resources</a></div>
<div class="article-box">
    <div class="article-head-area"><span class="article-header-title"><a>Presentations</a></span></div>
    @if (Model.Presentations.Any()) {
        foreach (var documentContent in Model.Presentations) {
            var content = (IContent) documentContent.ContentItem;
            <div class="article-item-area"><a class="article-linkage" href="@Url.Content(Url.ItemDisplayUrl(content))">@Html.ItemDisplayText(content)</a></div>
        }       
    }
    else { @T("No presentations") }
</div>
