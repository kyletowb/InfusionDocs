@{
    /* Get image path for images
    ***************************************************************/
    var ImgPath = Url.Content("~/Themes/Infusion/Content/Images/");
}

<div class="credits">
    <a href="#myModal" role="button" data-toggle="modal">
        <img src="@(ImgPath + "comment-icon.png")" alt="Comment"></a>
    <a href="mailto:">
        <img src="@(ImgPath + "message-icon.png")" alt="Message"></a>
    <span class="copyright">@T("&#169; 2012 OnMessage, Inc.")</span>
</div>


<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label-modal" for="textarea2">Add Comments:</label>
                <div class="controls">
                    <textarea class="input-xlarge" id="textarea2" rows="3"></textarea>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label-modal" for="textarea2">Add Rating:</label>
                <div class="controls">
                    <div class="rating">
                        <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                    </div>
                </div>
            </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
        </form>
    </div>

</div>
