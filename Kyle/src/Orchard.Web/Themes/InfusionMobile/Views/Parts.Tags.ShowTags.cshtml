@{
    var tagsHtml = new List<IHtmlString>();
    foreach(var t in Model.Tags) {
        //if (tagsHtml.Any()) {
        //    tagsHtml.Add(new HtmlString(", "));
        //}
        tagsHtml.Add(Html.ActionLink((string)t.TagName, "Search", "Home", new { area = "Orchard.Tags", tagName = (string)t.TagName }, new { rel = "tag", data_role = "button", data_inline="true", data_mini="true", data_icon = "tag" }));
    }
}

@if (tagsHtml.Any()) {
        @*<span>@T("Tags:")</span>*@
        foreach(var htmlString in tagsHtml) { @htmlString }
}
